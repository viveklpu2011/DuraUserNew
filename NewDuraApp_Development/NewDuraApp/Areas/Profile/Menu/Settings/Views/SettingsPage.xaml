                    Grid.Row="2"
                    Padding="20,0,5,0"
                    BackgroundColor="#EBE9FF"
                    CornerRadius="5"
                    HeightRequest="42"
                    IsEnabled="False"
                    IsVisible="False">
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                        <Label
                            FontFamily="ProximaRegular"
                            FontSize="14"
                            HorizontalOptions="StartAndExpand"
                            Text="Standard Rates"
                            TextColor="Black"
                            VerticalOptions="CenterAndExpand"
                            VerticalTextAlignment="Center" />
                        <ImageButton
                            Aspect="Fill"
                            BackgroundColor="Transparent"
                            HeightRequest="20"
                            HorizontalOptions="End"
                            VerticalOptions="CenterAndExpand"
                            WidthRequest="20">
                            <ImageButton.Source>
                                <FontImageSource
                                    FontFamily="UserIcons"
                                    Glyph="{x:Static fonticon:FontIconsClass.MenuRight}"
                                    Size="30"
                                    Color="Black" />

                            </ImageButton.Source>
                        </ImageButton>
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToPersonalUploadDocument}" />
                    </Frame.GestureRecognizers>
                </Frame>-->
                <Frame
                    Grid.Row="2"
                    Padding="20,0,5,0"
                    BackgroundColor="#EBE9FF"
                    CornerRadius="5"
                    HeightRequest="42">
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                        <Label
                            FontFamily="ProximaRegular"
                            FontSize="14"
                            HorizontalOptions="StartAndExpand"
                            Text="{translate:Translate About}"
                            TextColor="Black"
                            VerticalOptions="CenterAndExpand"
                            VerticalTextAlignment="Center" />
                        <ImageButton
                            Aspect="Fill"
                            BackgroundColor="Transparent"
                            HeightRequest="20"
                            HorizontalOptions="End"
                            VerticalOptions="CenterAndExpand"
                            WidthRequest="20">
                            <ImageButton.Source>
                                <FontImageSource
                                    FontFamily="UserIcons"
                                    Glyph="{x:Static fonticon:FontIconsClass.MenuRight}"
                                    Size="30"
                                    Color="Black" />
                            </ImageButton.Source>
                        </ImageButton>
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToAboutUs}" />
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame
                    Grid.Row="3"
                    Padding="20,0,5,0"
                    BackgroundColor="#EBE9FF"
                    CornerRadius="5"
                    HeightRequest="42">
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                        <Label
                            FontFamily="ProximaRegular"
                            FontSize="14"
                            HorizontalOptions="StartAndExpand"
                            Text="{translate:Translate TermAndConditions}"
                            TextColor="Black"
                            VerticalOptions="CenterAndExpand"
                            VerticalTextAlignment="Center" />
                        <ImageButton
                            Aspect="Fill"
                            BackgroundColor="Transparent"
                            HeightRequest="20"
                            HorizontalOptions="End"
                            VerticalOptions="CenterAndExpand"
                            WidthRequest="20">
                            <ImageButton.Source>
                                <FontImageSource
                                    FontFamily="UserIcons"
                                    Glyph="{x:Static fonticon:FontIconsClass.MenuRight}"
                                    Size="30"
                                    Color="Black" />
                            </ImageButton.Source>
                        </ImageButton>
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToTermsCondition}" />
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame
                    Grid.Row="4"
                    Padding="20,0,5,0"
                    BackgroundColor="#EBE9FF"
                    CornerRadius="5"
                    HeightRequest="42">
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                        <Label
                            FontFamily="ProximaRegular"
                            FontSize="14"
                            HorizontalOptions="StartAndExpand"
                            Text="{translate:Translate Privacy_Policy}"
                            TextColor="Black"
                            VerticalOptions="CenterAndExpand"
                            VerticalTextAlignment="Center" />
                        <ImageButton
                            Aspect="Fill"
                            BackgroundColor="Transparent"
                            HeightRequest="20"
                            HorizontalOptions="End"
                            VerticalOptions="CenterAndExpand"
                            WidthRequest="20">
                            <ImageButton.Source>
                                <FontImageSource
                                    FontFamily="UserIcons"
                                    Glyph="{x:Static fonticon:FontIconsClass.MenuRight}"
                                    Size="30"
                                    Color="Black" />
                            </ImageButton.Source>
                        </ImageButton>
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToPrivacyPoliccy}" />
                    </Frame.GestureRecognizers>
                </Frame>
                <StackLayout
                    Grid.Row="5"
                    xct:TouchEffect.Command="{Binding LogoutCommand}"
                    HeightRequest="25"
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Horizontal"
                    VerticalOptions="EndAndExpand">
                    <ImageButton
                        Aspect="Fill"
                        BackgroundColor="Transparent"
                        HeightRequest="20"
                        HorizontalOptions="Start"
                        Source="{images:EmbeddedImage NewDuraApp.Images.logout.png}"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="20" />
                    <Label
                        FontFamily="ProximaRegular"
                        FontSize="14"
                        HorizontalOptions="StartAndExpand"
                        Text="{translate:Translate Logout}"
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand"
                        VerticalTextAlignment="Center" />
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
