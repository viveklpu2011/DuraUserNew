<?xml version="1.0" encoding="UTF-8" ?>
<ViewCell
    x:Class="NewDuraApp.Areas.DuraEats.DuraEatsChatHelp.ViewCells.Views.OutgoingViewCell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:control="clr-namespace:NewDuraApp.Controls"
    xmlns:images="clr-namespace:NewDuraApp.Extensions"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">


    <Grid
        Margin="80,10,10,10"
        ColumnDefinitions="28,*"
        FlowDirection="LeftToRight"
        Rotation="180"
        RowDefinitions="Auto,28">
        <pancake:PancakeView
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Padding="10"
            BackgroundColor="#211E66"
            CornerRadius="15,15,0,15">
            <Label
                FontSize="14"
                Text="{Binding Text}"
                TextColor="White" />
        </pancake:PancakeView>
        <control:CircleImage
            Grid.Row="1"
            Grid.Column="0"
            Aspect="Fill"
            BorderColor="LightGray"
            BorderThickness="1"
            HeightRequest="28"
            Source="{images:EmbeddedImage NewDuraApp.Images.t_shirt.png}"
            WidthRequest="28" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            FontFamily="ProximaRegular"
            FontSize="10"
            Text="11:30 am"
            TextColor="#B7B7B7"
            VerticalOptions="CenterAndExpand"
            VerticalTextAlignment="Center" />
    </Grid>
</ViewCell>
